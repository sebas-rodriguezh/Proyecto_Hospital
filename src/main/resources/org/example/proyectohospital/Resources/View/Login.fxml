            <Font size="18.0" />
         </font>
      </Button>
      <Button id="btnVolver" fx:id="btnVolver" alignment="CENTER" layoutX="196.0" layoutY="345.0" mnemonicParsing="false" onAction="#volverAlMenu" prefHeight="19.0" prefWidth="96.0" style="-fx-background-color: #FF8C00; -fx-text-fill: white; -fx-font-weight: bold;" text="Volver">
