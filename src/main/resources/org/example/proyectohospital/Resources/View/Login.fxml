      </Button>
      <Button id="btnSalir" fx:id="btnSalir" alignment="CENTER" layoutX="301.0" layoutY="345.0" mnemonicParsing="false" onAction="#salirDelaApp" prefHeight="19.0" prefWidth="96.0" style="-fx-background-color: #DC143C; -fx-text-fill: white; -fx-font-weight: bold;" text="Salir">
