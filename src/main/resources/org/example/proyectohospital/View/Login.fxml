<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectohospital.Controller.LoginController">
   <children>
      <VBox layoutX="50.0" layoutY="45.0" prefHeight="213.0" prefWidth="501.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
         <children>
            <Label alignment="TOP_CENTER" contentDisplay="TOP" prefHeight="40.0" prefWidth="595.0" style="-fx-font-size: 23px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Inicio Sesión" />
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="182.0" minWidth="10.0" prefWidth="111.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="267.0" minWidth="10.0" prefWidth="264.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label alignment="TOP_LEFT" contentDisplay="TOP" prefHeight="30.0" prefWidth="152.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="ID Usuario:" GridPane.rowIndex="1" />
                  <Label alignment="BOTTOM_LEFT" contentDisplay="TOP" prefHeight="68.0" prefWidth="129.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Contraseña: " GridPane.rowIndex="3" />
                  <TextField id="txtIdUsuario" fx:id="txtIdUsuario" alignment="BASELINE_CENTER" opacity="0.75" prefHeight="0.0" prefWidth="264.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <PasswordField id="pwdPassword" fx:id="pwdPassword" alignment="BASELINE_CENTER" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </children>
      </VBox>
      <Button id="btnSalir" fx:id="btnSalir" alignment="CENTER" layoutX="403.0" layoutY="307.0" mnemonicParsing="false" onAction="#salirDelaApp" prefHeight="19.0" prefWidth="96.0" style="-fx-background-color: #DC143C; -fx-text-fill: white; -fx-font-weight: bold;" text="Salir">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button id="btnCambiarPassword" fx:id="btnCambiarPassword" alignment="CENTER" layoutX="219.0" layoutY="307.0" mnemonicParsing="false" onAction="#cambiarPassword" prefHeight="30.0" prefWidth="157.0" style="-fx-background-color: #00BFFF; -fx-text-fill: white; -fx-font-weight: bold;" text="Cambiar contraseña">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button id="btnIngresar" fx:id="btnIngresar" alignment="CENTER" layoutX="88.0" layoutY="307.0" mnemonicParsing="false" onAction="#iniciarSesion" prefHeight="25.0" prefWidth="104.0" style="-fx-background-color: #228B22; -fx-text-fill: white; -fx-font-weight: bold;" text="Ingresar">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <ImageView fitHeight="34.0" fitWidth="51.0" layoutX="284.0" layoutY="52.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Resources/Assets/Images/login.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
